<Window x:Class="ElEscribaDelDJ.Registrarse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElEscribaDelDJ"
        mc:Ignorable="d"
        Title="Registrarse" Height="450" Width="800"
        Background="Black">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="Titulo" TargetType="TextBlock" BasedOn="{StaticResource Encabezado}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ErrorUsuario" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel>
        <TextBlock Style="{DynamicResource Titulo}" 
                Text="Registro de usuario"
                Margin="20"/>
            <Grid HorizontalAlignment="Center"
                  Name = "gridRegistro">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Nombre de usuario"
                           Margin="10"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBox   Name="userText" 
                           Grid.Column="1"
                           Margin="10"
                           Grid.Row="0"
                           Width="200"
                           LostFocus="User_LostFocus"
                           TextChanged="userText_TextChanged"/>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            Grid.Row="0">
                    <Image Name="ImgUser"
                           Source="/images/icons/icons8-incorrecto.png"
                           Height="20"
                           Margin="10"/>
                    <TextBlock x:Name="ErrorUser"
                               Text="Introduzca el nombre del usuario"
                               Margin="10"
                               Style="{DynamicResource ErrorUsuario}"/>
                </StackPanel>

                    <TextBlock Text="Contraseña"
                           Margin="10"
                           Grid.Column="0"
                           Grid.Row="1"/>
                <TextBox Grid.Column="1"
                           Grid.Row="1"
                         Margin="10"/>
                <Image Grid.Column="2"
                           Grid.Row="1"/>
                
                <TextBlock Text="Repetir Contraseña"
                           Grid.Column="0"
                           Grid.Row="2"
                           Margin="10"/>
                <TextBox Grid.Column="1"
                           Grid.Row="2"
                         Margin="10"/>
                <Image Grid.Column="2"
                           Grid.Row="2"/>
                
                <TextBlock Text="Correo"
                           Grid.Column="0"
                           Grid.Row="3"
                           Margin="10"/>
                <TextBox Grid.Column="1"
                           Grid.Row="3"
                         Margin="10"/>
                <Image Grid.Column="2"
                           Grid.Row="3"/>
                
                <TextBlock Text="Repetir Correo"
                           Grid.Column="0"
                           Grid.Row="4"
                           Margin="10"/>
                <TextBox Grid.Column="1"
                           Grid.Row="4"
                         Margin="10"/>
                <Image Grid.Column="2"
                           Grid.Row="4"/>
                
                <Button Name="AceptarButton"
                        Content="Aceptar"
                        Grid.Row="5"
                        Margin="10"
                        IsEnabled="False"/>
                <Button Content="Cancelar"
                        Grid.Column="1"
                        Grid.Row="5"
                        Margin="10"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
