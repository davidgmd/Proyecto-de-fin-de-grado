<Window x:Class="ElEscribaDelDJ.View.Calendar.Calendario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElEscribaDelDJ.View.Calendar"
        xmlns:SystemGlobalization="clr-namespace:System.Globalization;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Calendario"
        Background="NavajoWhite"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <Style x:Key="bordes-list-view-google" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Blue"/>
        </Style>

        <Style x:Key="text-block-list-view-google" TargetType="TextBlock">
            <Setter Property="Background" Value="CornflowerBlue"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="5" HorizontalAlignment="Center" Grid.ColumnSpan="2">
        <TextBlock Text="Anotar Partida en el Calendario"
                   FontSize="24"/>
            <TextBlock Text="Indique antes que nada si desea ver el calendario de outlook o google"/>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Background="Blue" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Outlook"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\outlook.png"/>
                    </StackPanel>
                </Button>
                <Button Background="CornflowerBlue" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Google Calendar"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\googlecalendar.png"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" >
            <Viewbox Stretch="Fill" StretchDirection="Both" Width="300">
                <Calendar Background="Transparent" x:Name="Calendar" DisplayDateChanged="Calendar_DisplayDateChanged" Loaded="Calendar_Loaded">
                    <Calendar.CalendarDayButtonStyle>
                        <Style TargetType="CalendarDayButton" BasedOn="{StaticResource {x:Type CalendarDayButton}}">
                            <EventSetter Event="Loaded" Handler="calendarButton_Loaded" />
                        </Style>
                    </Calendar.CalendarDayButtonStyle>
                </Calendar>
            </Viewbox>
            <Grid Margin="5" Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Nombre Organizador" Grid.Row="0"/>
                <TextBox Grid.Row="0" Grid.Column="1"/>
                <TextBlock Grid.Row="3"
                       Text="Fecha:"/>
                <DatePicker Grid.Column="1" Grid.Row="3" Focusable="False"/>
                <TextBlock Grid.Row="1" 
                       Text="Asunto:"/>
                <TextBox Grid.ColumnSpan="2" Grid.Row="1" 
                     Grid.Column="1"  
                     TextWrapping="Wrap" 
                     Height="Auto"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" 
                Grid.Column="1">
            <StackPanel x:Name="StacuPanelActualizarListView" HorizontalAlignment="Center" Orientation="Horizontal" MouseDown="ActualizarListView_MouseDown" Cursor="Hand">
                <TextBlock Text="Actualizar" TextDecorations="Underline" Margin="0 0 5 0"/>
                <Button x:Name="BotonActualizarListView" Background="DarkBlue" Margin="0 0 5 0" Click="BotonActualizarListView_Click">
                    <Image Width="12" Source="\Images\icons\icons8-actualizar.png"/>
                </Button>
            </StackPanel>
            <ListView Background="Transparent" 
                      x:Name="DatosEvento"
                      Margin="5"
                      MinWidth="{Binding ActualWidth, ElementName=Calendar}"
                      Height="250"
                      ItemsSource="{Binding Path=Eventos}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Width="350" Orientation="Horizontal">
                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Nombre Organizador" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.DisplayName}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Correo Organizador" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.Email}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Nombre Evento" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Summary}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Estado" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Status}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha Inicio dd/mm/yyyy" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Start.DateTime}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha actualización" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Updated, ConverterCulture={x:Static SystemGlobalization:CultureInfo.DefaultThreadCurrentCulture}}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha Fin dd/mm/yyyy" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=End.DateTime}"/>
                            </StackPanel>

                            <StackPanel Margin="2">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Enlace" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=HtmlLink}" Foreground="Blue" TextDecorations="Underline" MouseDown="TextBlockHiperLink_MouseDown" Cursor="Hand"/>
                            </StackPanel>
                            <Line X1="10" X2="300" Margin="5" Stroke="Black" StrokeThickness="2"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
