<Window x:Class="ElEscribaDelDJ.View.Calendar.Calendario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElEscribaDelDJ.View.Calendar"
        xmlns:SystemGlobalization="clr-namespace:System.Globalization;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Calendario"
        Background="NavajoWhite"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/View/Calendar/Calendario.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="5" HorizontalAlignment="Center" Grid.ColumnSpan="2">
        <TextBlock Text="Anotar Partida en el Calendario"
                   FontSize="24"/>
            <TextBlock Text="Indique antes que nada si desea ver el calendario de outlook o google"/>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Background="Blue" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Outlook"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\outlook.png"/>
                    </StackPanel>
                </Button>
                <Button x:Name="botonGoogleCalendar" Background="CornflowerBlue" Height="20" Click="botonGoogleCalendar_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Google Calendar"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\googlecalendar.png"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" >
            <Viewbox Stretch="Fill" StretchDirection="Both" Width="300">
                <Calendar Background="Transparent" 
                          x:Name="Calendar" 
                          DisplayDateChanged="Calendar_DisplayDateChanged" 
                          Loaded="Calendar_Loaded"
                          IsEnabled="False">
                    <Calendar.CalendarDayButtonStyle>
                        <Style TargetType="CalendarDayButton" BasedOn="{StaticResource {x:Type CalendarDayButton}}">
                            <EventSetter Event="Loaded" Handler="calendarButton_Loaded" />
                        </Style>
                    </Calendar.CalendarDayButtonStyle>
                </Calendar>
            </Viewbox>
        </StackPanel>
        
        <StackPanel Grid.Row="1" 
                Grid.Column="1"
                    IsEnabled="False"
                    x:Name="ListaEventosGoogleCalendar">
            <StackPanel x:Name="StackPanelActualizarListView" 
                        Style="{DynamicResource Actualizar-list-view-stackpanel}" 
                        MouseDown="ActualizarListView_MouseDown">
                <TextBlock Text="Actualizar" Style="{DynamicResource Actualizar-stackpanel-text}"/>
                <Button x:Name="BotonActualizarListView" 
                        Style="{DynamicResource Actualizar-stackpanel-boton}" 
                        Click="BotonActualizarListView_Click">
                    <Image Style="{DynamicResource Actualizar-stackpanel-icono}"/>
                </Button>
            </StackPanel>
            <ComboBox Style="{DynamicResource combo-box}" 
                      x:Name="DatosEvento"
                      Binding.TargetUpdated="DatosEvento_SourceUpdated">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Style="{DynamicResource wrappanel-combo-box-google}">
                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Nombre Organizador" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.DisplayName}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Correo Organizador" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.Email}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Nombre Evento" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Summary}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Estado" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Status}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Fecha Inicio dd/mm/yyyy" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Start.DateTime}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Fecha actualización" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Updated, ConverterCulture={x:Static SystemGlobalization:CultureInfo.DefaultThreadCurrentCulture}}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Fecha Fin dd/mm/yyyy" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=End.DateTime}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-combo-box-google}">
                                <Border Style="{DynamicResource bordes-combo-box-google}">
                                    <TextBlock Text="Enlace" Style="{DynamicResource text-block-combo-box-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=HtmlLink}" Foreground="Blue" TextDecorations="Underline" MouseDown="TextBlockHiperLink_MouseDown" Cursor="Hand"/>
                            </StackPanel>
                        </WrapPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <WrapPanel Orientation="Horizontal" Margin="5 0 0 0">
                <Button>
                    <TextBlock Text="Editar"
                               Margin="5 0 5 0"/>
                </Button>
                <Button>
                    <TextBlock Text="Eliminar"
                               Margin="5 0 5 0"/>
                </Button>
            </WrapPanel>
        </StackPanel>

        <Grid Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Nombre Organizador" 
                       Grid.Row="0"/>
            <TextBox Grid.Row="0" 
                     Grid.Column="1"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="1" 
                       Text="Asunto:"/>
            <TextBox Grid.Row="1" 
                     Grid.Column="1"  
                     TextWrapping="Wrap"
                     MaxWidth="220"
                     Height="Auto"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="2"
                       Text="Fecha inicio:"/>
            <DatePicker Grid.Column="1" 
                        Grid.Row="2" 
                        Focusable="False"
                        DisplayDate="{x:Static sys:DateTime.Now}"
                        x:Name="FechaInicioDatePicker"
                        SelectedDateChanged="FechaInicioDatePicker_SelectedDateChanged"
                        Margin="5 0 5 0"/>

            <TextBlock Text="Correo Organizador" 
                       Grid.Row="0"
                       Grid.Column="2"
                       Margin="0 0 5 0"/>
            <TextBox Grid.Row="0" 
                     Grid.Column="3"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Text="Estado:"/>
            <ComboBox Grid.Row="1"
                      Grid.Column="3"
                      Margin="5 0 5 0">
                <ComboBoxItem>Por confirmar</ComboBoxItem>
                <ComboBoxItem>Confirmado</ComboBoxItem>
                <ComboBoxItem>Cancelado</ComboBoxItem>
                <ComboBoxItem>Finalizado</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Text="Fecha Fin:"/>
            <DatePicker Grid.Column="3"
                        Grid.Row="2" 
                        Focusable="False"
                        IsEnabled="False"
                        x:Name="FechaFinDatePicker"
                        Margin="5 0 5 0"/>
            <TextBlock Text="Hora Inicio"
                       Grid.Row="3"/>
            <WrapPanel Orientation="Horizontal"
                       Grid.Row="3"
                       Grid.Column="1"
                       Margin="5 0 5 0">
                <TextBox Text="HH"
                         MaxLength="2"
                         x:Name="HoraInicio"
                         GotFocus="HoraInicio_GotFocus"
                         LostFocus="HoraInicio_LostFocus"
                         KeyDown="HoraInicio_KeyDown"/>
                <TextBox Text="MM"
                         MaxLength="2"
                         x:Name="MinutosInicio"
                         GotFocus="MinutosInicio_GotFocus"
                         LostFocus="MinutosInicio_LostFocus"
                         KeyDown="MinutosInicio_KeyDown"/>
            </WrapPanel>

            <TextBlock Text="Hora Fin"
                       Grid.Row="3"
                       Grid.Column="2"/>
            <WrapPanel Orientation="Horizontal"
                       Grid.Row="3"
                       Grid.Column="3"
                       Margin="5 0 5 0">
                <TextBox Text="HH"
                         MaxLength="2"
                         x:Name="HoraFin"
                         GotFocus="HoraFin_GotFocus"
                         LostFocus="HoraFin_LostFocus"
                         KeyDown="HoraFin_KeyDown"/>
                <TextBox Text="MM"
                         MaxLength="2"
                         x:Name="MinutosFin"
                         GotFocus="MinutosFin_GotFocus"
                         LostFocus="MinutosFin_LostFocus"
                         KeyDown="MinutosFin_KeyDown"/>
            </WrapPanel>

            <WrapPanel Orientation="Horizontal"
                       Grid.Row="4"
                       Grid.ColumnSpan="4"
                       Margin="0 5 0 0">
                <Button IsEnabled="False">
                    <TextBlock Text="Agregar Evento"
                               Margin="5 0 5 0"/>
                </Button>
                <Button IsEnabled="False">
                    <TextBlock Text="Editar Evento"                          
                               Margin="5 0 5 0"/>
                </Button>
                <Button>
                    <TextBlock Text="Limpiar Campos"
                               Margin="5 0 5 0"/>
                </Button>
            </WrapPanel>

        </Grid>
    </Grid>
</Window>
