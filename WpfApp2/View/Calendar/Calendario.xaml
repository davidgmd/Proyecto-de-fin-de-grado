<Window x:Class="ElEscribaDelDJ.View.Calendar.Calendario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElEscribaDelDJ.View.Calendar"
        xmlns:SystemGlobalization="clr-namespace:System.Globalization;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Calendario"
        Background="NavajoWhite"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <Style x:Key="Actualizar-list-view-stackpanel" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="Actualizar-stackpanel-text" TargetType="TextBlock">
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
        </Style>

        <Style x:Key="Actualizar-stackpanel-boton" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
        </Style>

        <Style x:Key="Actualizar-stackpanel-icono" TargetType="Image">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Source" Value="\Images\icons\icons8-actualizar.png"/>
        </Style>

        <Style x:Key="list-view" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="ItemsSource" Value="{Binding Path=Eventos, NotifyOnTargetUpdated=True}"/>
        </Style>
        
        <Style x:Key="wrappanel-list-view-google" TargetType="WrapPanel">
            <Setter Property="Width" Value="350"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        
        <Style x:Key="stackpanel-list-view-google" TargetType="StackPanel">
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style x:Key="bordes-list-view-google" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Blue"/>
        </Style>

        <Style x:Key="text-block-list-view-google" TargetType="TextBlock">
            <Setter Property="Background" Value="CornflowerBlue"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="5" HorizontalAlignment="Center" Grid.ColumnSpan="2">
        <TextBlock Text="Anotar Partida en el Calendario"
                   FontSize="24"/>
            <TextBlock Text="Indique antes que nada si desea ver el calendario de outlook o google"/>
            <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Background="Blue" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Outlook"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\outlook.png"/>
                    </StackPanel>
                </Button>
                <Button Background="CornflowerBlue" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Google Calendar"
                                   Foreground="White"
                                   Margin="5 0 5 0"
                                   FontWeight="Light"/>
                        <Image Height="20"
                               Source="\Images\icons\googlecalendar.png"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" >
            <Viewbox Stretch="Fill" StretchDirection="Both" Width="300">
                <Calendar Background="Transparent" x:Name="Calendar" DisplayDateChanged="Calendar_DisplayDateChanged" Loaded="Calendar_Loaded">
                    <Calendar.CalendarDayButtonStyle>
                        <Style TargetType="CalendarDayButton" BasedOn="{StaticResource {x:Type CalendarDayButton}}">
                            <EventSetter Event="Loaded" Handler="calendarButton_Loaded" />
                        </Style>
                    </Calendar.CalendarDayButtonStyle>
                </Calendar>
            </Viewbox>
        </StackPanel>
        
        <StackPanel Grid.Row="1" 
                Grid.Column="1">
            <StackPanel x:Name="StackPanelActualizarListView" 
                        Style="{DynamicResource Actualizar-list-view-stackpanel}" 
                        MouseDown="ActualizarListView_MouseDown">
                <TextBlock Text="Actualizar" Style="{DynamicResource Actualizar-stackpanel-text}"/>
                <Button x:Name="BotonActualizarListView" 
                        Style="{DynamicResource Actualizar-stackpanel-boton}" 
                        Click="BotonActualizarListView_Click">
                    <Image Style="{DynamicResource Actualizar-stackpanel-icono}"/>
                </Button>
            </StackPanel>
            <ComboBox Style="{DynamicResource list-view}" 
                      x:Name="DatosEvento"
                      Binding.TargetUpdated="DatosEvento_SourceUpdated">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Style="{DynamicResource wrappanel-list-view-google}">
                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Nombre Organizador" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.DisplayName}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Correo Organizador" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Organizer.Email}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Nombre Evento" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Summary}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Estado" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Status}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha Inicio dd/mm/yyyy" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Start.DateTime}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha actualización" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=Updated, ConverterCulture={x:Static SystemGlobalization:CultureInfo.DefaultThreadCurrentCulture}}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Fecha Fin dd/mm/yyyy" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=End.DateTime}"/>
                            </StackPanel>

                            <StackPanel Style="{DynamicResource stackpanel-list-view-google}">
                                <Border Style="{DynamicResource bordes-list-view-google}">
                                    <TextBlock Text="Enlace" Style="{DynamicResource text-block-list-view-google}"/>
                                </Border>
                                <TextBlock Text="{Binding Path=HtmlLink}" Foreground="Blue" TextDecorations="Underline" MouseDown="TextBlockHiperLink_MouseDown" Cursor="Hand"/>
                            </StackPanel>
                        </WrapPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <Grid Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Nombre Organizador" 
                       Grid.Row="0"/>
            <TextBox Grid.Row="0" 
                     Grid.Column="1"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="1" 
                       Text="Asunto:"/>
            <TextBox Grid.Row="1" 
                     Grid.Column="1"  
                     TextWrapping="Wrap"
                     MaxWidth="220"
                     Height="Auto"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="3"
                       Text="Fecha inicio:"/>
            <DatePicker Grid.Column="1" 
                        Grid.Row="3" 
                        Focusable="False"
                        Margin="5 0 5 0"/>

            <TextBlock Text="Correo Organizador" 
                       Grid.Row="0"
                       Grid.Column="2"
                       Margin="0 0 5 0"/>
            <TextBox Grid.Row="0" 
                     Grid.Column="3"
                     Margin="5 0 5 0"/>

            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Text="Estado:"/>
            <ComboBox Grid.Row="1"
                      Grid.Column="3"
                      Margin="5 0 5 0">
                <ComboBoxItem>Confirmado</ComboBoxItem>
                <ComboBoxItem>Cancelado</ComboBoxItem>
                <ComboBoxItem>Finalizado</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="3"
                       Grid.Column="2"
                       Text="Fecha Fin:"/>
            <DatePicker Grid.Column="3"
                        Grid.Row="3" 
                        Focusable="False"
                        Margin="5 0 5 0"/>
        </Grid>
    </Grid>
</Window>
