<Window x:Class="WpfApp2.View.menuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.View"
        mc:Ignorable="d"
        Title="menuPrincipal" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="comboBoxCampaigne" TargetType="ComboBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="iconCampaigne" TargetType="Image">
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>

        <Style x:Key="botonSalirMP" TargetType="Button" BasedOn="{StaticResource botonSalir}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
        </Style>

        <Style x:Key="buttonComboBox" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <Style x:Key="addComboBox" TargetType="Button" BasedOn="{StaticResource buttonComboBox}">
            <Setter Property="Background" Value="ForestGreen"/>
        </Style>

        <Style x:Key="dropComboBox" TargetType="Button" BasedOn="{StaticResource buttonComboBox}">
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="gridBase" Background="Silver">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="2"
              Margin="10"
              Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid   Grid.ColumnSpan="2">
            <TextBlock Style="{DynamicResource Encabezado}" 
                       Text="Seleccionar campaña"
                       x:Name="tituloCampana"/>
                <Button Style="{DynamicResource botonSalirMP}"
                        Click="exitButton_Click">
                    <Image Source="/images/icons/icons8-salir.png"/>
                </Button>
            </Grid>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        HorizontalAlignment="Center">

                <Button Style="{DynamicResource addComboBox}">
                    <Image Source="/images/icons/iconoMas.png"/>
                </Button>

                <ComboBox Style="{DynamicResource comboBoxCampaigne}"
                            x:Name="campaigneComboBox"
                            Text="Si no tiene ninguna creada, marque Nueva Campaña"
                            SelectionChanged="CampaigneComboBox_SelectionChanged">
                    <ComboBoxItem>
                        <TextBlock Text="Nueva campaña"/>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="D&amp;D 3.5"/>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="Warhammer"/>
                    </ComboBoxItem>
                </ComboBox>

                <Button Style="{DynamicResource dropComboBox}">
                    <Image Source="/images/icons/iconoMenos.png"/>
                </Button>

            </StackPanel>
            
            <Image Style="{DynamicResource iconCampaigne}"
                    Grid.Row="2"
                    x:Name="iconoCampaigne"
                    Source="/images/icons/icons8-escudopregunta.png"/>
        </Grid>
        
        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonCalendario">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Calendario" >
                        <TextBlock.Effect>
                            <DropShadowEffect RenderingBias="Quality"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image Style="{DynamicResource noVisible}" Source="/images/icons/icons8-calendar.png"/>
                    <Image Style="{DynamicResource visibleInicio}" Source="/images/icons/icons8-lock.png" />
                </StackPanel>
            </Button>
        </Border>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="1"
                Grid.Column="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonRecursos">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Recursos Partidas" >
                        <TextBlock.Effect>
                            <DropShadowEffect RenderingBias="Quality"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image Style="{DynamicResource noVisible}" Source="/images/icons/icons8-books.png"/>
                    <Image Style="{DynamicResource visibleInicio}" Source="/images/icons/icons8-lock.png" />
                </StackPanel>
            </Button>
        </Border>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="2">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonTirador">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Tirador de dados" >
                        <TextBlock.Effect>
                            <DropShadowEffect RenderingBias="Quality"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image Style="{DynamicResource noVisible}" Source="/images/icons/icons8-dices.png"/>
                    <Image Style="{DynamicResource visibleInicio}" Source="/images/icons/icons8-lock.png" />
                </StackPanel>
            </Button>
        </Border>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="2"
                Grid.Column="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonOpciones">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Opciones" >
                        <TextBlock.Effect>
                            <DropShadowEffect RenderingBias="Quality"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image Style="{DynamicResource noVisible}" Source="/images/icons/icons8-options.png"/>
                    <Image Style="{DynamicResource visibleInicio}" Source="/images/icons/icons8-lock.png" />
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</Window>
