<Window x:Class="WpfApp2.View.menuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.View"
        mc:Ignorable="d"
        Title="menuPrincipal" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="comboBoxCampaigne" TargetType="ComboBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="iconCampaigne" TargetType="Image">
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="gridBase" Background="Silver">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Style="{DynamicResource gridButton}"
                  Grid.ColumnSpan="2">
            
            <Grid Margin="10"
                        Grid.Row="0"
                        Grid.ColumnSpan="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Style="{DynamicResource Encabezado}" Text="Seleccionar campaña"/>
                <ComboBox Style="{DynamicResource comboBoxCampaigne}"
                          x:Name="campaigneComboBox"
                          Text="Si no tiene ninguna creada, marque Nueva Campaña"
                          SelectionChanged="CampaigneComboBox_SelectionChanged"
                          Grid.Row="1">
                    <ComboBoxItem>
                        <TextBlock Text="Nueva campaña"/>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="D&amp;D 3.5"/>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="Warhammer"/>
                    </ComboBoxItem>
                </ComboBox>
                <Image Style="{DynamicResource iconCampaigne}"
                       Grid.Row="2"
                       x:Name="iconoCampaigne"
                       Source="/images/icons/icons8-escudopregunta.png">
                </Image>
            </Grid>
        </Grid>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonCalendario">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Calendario" />
                    <Image Style="{DynamicResource iconMenu}" Source="/images/icons/icons8-calendar.png"/>
                </StackPanel>
            </Button>
        </Border>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="1"
                Grid.Column="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonRecursos">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Recursos Partidas" />
                    <Image Style="{DynamicResource iconMenu}" Source="/images/icons/icons8-books.png"/>
                </StackPanel>
            </Button>
        </Border>
        
        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="2">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonTirador">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Tirador de dados" />
                    <Image Style="{DynamicResource iconMenu}" Source="/images/icons/icons8-dices.png"/>
                </StackPanel>
            </Button>
        </Border>

        <Border Style="{DynamicResource borderMenu}"
                Grid.Row="2"
                Grid.Column="1">
            <Button Style="{DynamicResource botonMenu}"
                    x:Name="botonOpciones">
                <StackPanel>
                    <TextBlock Style="{DynamicResource textoGridMenu}" 
                               Text="Opciones" />
                    <Image Style="{DynamicResource iconMenu}" Source="/images/icons/icons8-options.png"/>
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</Window>
