<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ElEscribaDelDJ.Resources.View.Options">

    <Style x:Key="InformacionPrograma" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <Style x:Key="InformacionProgramaCategoria" BasedOn="{StaticResource InformacionPrograma}" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="InformacionProgramaEnlace" BasedOn="{StaticResource InformacionPrograma}" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>
</ResourceDictionary>